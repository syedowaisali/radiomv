<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<LinearLayout	    
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_marginBottom="60dp"
	    android:background="@drawable/color_bg"
	    android:gravity="center" >
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center" >
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/head_join_us" />
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/facebook"
	            android:clickable="true"
	            android:onClick="openFacebook"
	            android:layout_marginTop="50dp" />
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/instagram"
	            android:clickable="true"
	            android:onClick="openInstagram"
	            android:layout_marginTop="15dp" />
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/vimeo"
	            android:clickable="true"
	            android:onClick="openVimeo"
	            android:layout_marginTop="15dp" />
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/odnoklasniki"
	            android:clickable="true"
	            android:onClick="openOdno"
	            android:layout_marginTop="15dp" />
	        
	    </LinearLayout>
	    
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
	    android:background="#fff" >
	    
	    <!-- donate tab -->
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="#f64f00" >
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/btn_donate"
	            android:clickable="true"
	            android:onClick="gotoDonate" />
	        
	    </LinearLayout>
	    
	    <!-- chat tab -->
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="#f64f00" >
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/btn_chat"
	            android:clickable="true"
	            android:onClick="gotoChat" />
	        
	    </LinearLayout>
	    
	    <!-- radio tab -->
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="#f64f00" >
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/btn_radio"
	            android:clickable="true"
	            android:onClick="gotoRadio" />
	        
	    </LinearLayout>
	    
	    <!-- social tab -->
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center" >
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/btn_social_active"
	            android:clickable="true"
	            android:onClick="gotoSocial" />
	        
	    </LinearLayout>
	    
	    <!-- contact tab -->
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="#f64f00" >
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/btn_contact"
	            android:clickable="true"
	            android:onClick="gotoContact" />
	        
	    </LinearLayout>
	    
	</LinearLayout>

</RelativeLayout>
